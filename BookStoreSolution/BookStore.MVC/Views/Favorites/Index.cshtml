@model List<BookStore.MVC.Models.Favorite>
@{
    ViewBag.Title = "Favorilerim";
}

@if (TempData["success"] is string s)
{
     <div class="alert alert-success">@s</div>
}
@if (TempData["error"] is string e)
{
     <div class="alert alert-danger">@e</div>
}

<h2 class="mb-3">@ViewBag.Title</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Henüz favori kitap yok.</div>
}
else
{
    <div class="row g-4">
        @foreach (var f in Model)
        {
            var b = f.Book; 
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100">
                    <div class="ratio ratio-3x4">
                        <img src="@(b?.ImageUrl ?? "/images/placeholder.jpg")"
                             onerror="this.src='/images/placeholder.jpg'"
                             class="card-img-top object-fit-cover"
                             alt="@b?.Title" />
                    </div>
                    <div class="card-body d-flex flex-column">
                        <span class="badge badge-soft mb-2">@b?.Category?.Name</span>
                        <h6 class="fw-800 mb-1 text-truncate">@b?.Title</h6>
                        <div class="text-muted small mb-3">
                            Fiyat: <strong class="text-body">@((b?.Price ?? 0).ToString("0.00")) ₺</strong>
                        </div>

                        <div class="mt-auto d-flex gap-2">
                            <a class="btn btn-sm btn-outline-secondary flex-fill"
                               asp-controller="Books" asp-action="Details" asp-route-id="@b?.Id">
                                Detay
                            </a>
                            <form method="post" asp-controller="Favorites" asp-action="Remove" asp-route-id="@f.Id">
                                <button class="btn btn-sm btn-outline-danger">Çıkar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}