@{
    var cartCount = ViewBag.CartCount as int? ?? 0;
    var favCount = ViewBag.FavCount as int? ?? 0;
    var title = ViewBag.Title as string ?? "BookStore";
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
}
<!DOCTYPE html>
<html lang="tr" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title • BookStore</title>


    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="app-bg d-flex flex-column min-vh-100">


    <nav class="navbar navbar-expand-lg navbar-dark glass-nav sticky-top">
        <div class="container">
            <a class="navbar-brand fw-800 d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <i class="bi bi-journal-richtext fs-3"></i> <span>BookStore</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="mainNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Books" asp-action="Index">Kitaplar</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Categories" asp-action="Index">Kategoriler</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Bize Ulaşın</a></li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-speedometer2 me-1"></i>Admin
                            </a>
                            <ul class="dropdown-menu shadow-lg">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Books" asp-action="Index"><i class="bi bi-book me-2"></i>Kitaplar</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Categories" asp-action="Index"><i class="bi bi-tags me-2"></i>Kategoriler</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Orders" asp-action="Index"><i class="bi bi-bag-check me-2"></i>Siparişler</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center gap-2">
                    <button id="themeToggle" class="btn btn-sm btn-outline-light" title="Tema">
                        <i class="bi bi-sun-fill" id="themeIcon"></i>
                    </button>

                    @if (isAuth)
                    {
                        <a class="btn btn-outline-light position-relative"
                           asp-area=""
                           asp-controller="Favorites" asp-action="Index">
                            <i class="bi bi-heart-fill"></i>
                            <span class="badge rounded-pill bg-danger position-absolute top-0 start-100 translate-middle">@favCount</span>
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light position-relative"
                           asp-controller="Auth" asp-action="Login"
                           asp-route-returnUrl="/Favorites">
                            <i class="bi bi-heart-fill"></i>
                            <span class="badge rounded-pill bg-danger position-absolute top-0 start-100 translate-middle">@favCount</span>
                        </a>
                    }

                    <a class="btn btn-light position-relative" asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart-fill"></i>
                        <span class="badge rounded-pill bg-warning text-dark position-absolute top-0 start-100 translate-middle">@cartCount</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>


    <div class="toast-container position-fixed top-0 end-0 p-3">
        @if (TempData["success"] is string s && !string.IsNullOrWhiteSpace(s))
        {
            <div class="toast align-items-center text-bg-success border-0 show shadow-lg" role="alert">
                <div class="d-flex">
                    <div class="toast-body"><i class="bi bi-check-circle me-2"></i>@s</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        }
        @if (TempData["error"] is string e && !string.IsNullOrWhiteSpace(e))
        {
            <div class="toast align-items-center text-bg-danger border-0 show shadow-lg" role="alert">
                <div class="d-flex">
                    <div class="toast-body"><i class="bi bi-exclamation-triangle me-2"></i>@e</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        }
    </div>


    <header class="hero-gradient py-5 text-white text-center">
        <div class="container">
            <h1 class="display-6 fw-800 mb-1">@title</h1>
            <p class="opacity-75">Binlerce kitap arasından seçimini yap.</p>
        </div>
    </header>

    <main class="container my-4 flex-fill">
        @RenderBody()
    </main>

    <footer class="footer glass-nav mt-auto py-3">
        <div class="container d-flex justify-content-between small text-light">
            <span>©️ @DateTime.Now.Year BookStore</span>
            <span class="opacity-75">Made with ❤ & Bootstrap</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      
        (function () {
            const html = document.documentElement;
            const key = 'theme';
            const saved = localStorage.getItem(key);
            if (saved) html.setAttribute('data-theme', saved);

            const btn = document.getElementById('themeToggle');
            const icon = document.getElementById('themeIcon');
            const syncIcon = () => icon.className = html.getAttribute('data-theme') === 'dark' ? 'bi bi-moon-stars-fill' : 'bi bi-sun-fill';
            syncIcon();

            btn?.addEventListener('click', () => {
                const next = html.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
                html.setAttribute('data-theme', next);
                localStorage.setItem(key, next);
                syncIcon();
            });

           
            document.querySelectorAll('.toast').forEach(t => new bootstrap.Toast(t, { delay: 3000 }).show());
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>