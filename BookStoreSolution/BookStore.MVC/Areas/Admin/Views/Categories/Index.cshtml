@model List<BookStore.MVC.Models.Category>
@{
    ViewBag.Title = "Kategoriler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewBag.Title</h2>
    <a class="btn btn-outline-secondary" asp-controller="Books" asp-action="Index">
        <i class="bi bi-book"></i> Tüm Kitaplar
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Kategori bulunamadı.</div>
}
else
{
    <div class="row g-4">
        @foreach (var c in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4">
                <a asp-controller="Categories" asp-action="Details" asp-route-id="@c.Id"
                   class="text-decoration-none">
                    <div class="card p-3 h-100">
                        <div class="d-flex align-items-start gap-3">
                            <div class="rounded-circle bg-primary-subtle p-3">
                                <i class="bi bi-tag fs-4 text-primary"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="fw-800 mb-1 text-body">@c.Name</h6>
                                <p class="mb-0 small text-muted text-truncate-2">
                                    @c.Description
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}