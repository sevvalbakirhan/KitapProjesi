@model BookStore.MVC.Models.Category
@{
    ViewBag.Title = "Kategori Sil";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-warning">
    <strong>@Model.Name</strong> kategorisini silmek üzeresiniz. Devam etmek istiyor musunuz?
</div>

<dl class="row">
    <dt class="col-sm-2">Ad</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Açıklama</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <button class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>