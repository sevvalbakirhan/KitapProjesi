@model BookStore.MVC.Models.Book
@{
    ViewBag.Title = "Yeni Kitap";
    var categories = ViewBag.Categories as List<BookStore.MVC.Models.Category> ?? new();
}

<h2>@ViewBag.Title</h2>

<form method="post" enctype="multipart/form-data" class="col-lg-7">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Kitap Adı</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Fiyat</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kategori</label>
        <select asp-for="CategoryId" class="form-select" required>
            <option value="">Seçiniz…</option>
            @foreach (var c in categories)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kapak Resmi</label>
        <input name="image" type="file" class="form-control" accept="image/*" />
        <div class="form-text">Seçtiğin .jpg/.png dosyası wwwroot/images altına kaydedilir.</div>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary">Kaydet</button>
        <a class="btn btn-secondary" asp-area="Admin" asp-controller="Books" asp-action="Index">Geri</a>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }