@model List<BookStore.MVC.Models.Book>
@{
    ViewBag.Title = "Kitaplar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewBag.Title</h2>
    <a class="btn btn-outline-secondary" asp-controller="Categories" asp-action="Index">
        <i class="bi bi-tags"></i> Kategoriler
    </a>
</div>

@if (TempData["success"] is string s)
{
     <div class="alert alert-success">@s</div>
}
@if (TempData["error"] is string e)
{
     <div class="alert alert-danger">@e</div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Hiç kitap bulunamadı.</div>
}
else
{
    <div class="row g-4">
        @foreach (var book in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100">
                    <div class="ratio ratio-3x4">
                        <img src="@book.ImageUrl"
                             onerror="this.src='/images/placeholder.jpg'"
                             class="card-img-top object-fit-cover"
                             alt="@book.Title" />
                    </div>
                    <div class="card-body d-flex flex-column">
                        <span class="badge badge-soft mb-2">@book.Category?.Name</span>
                        <h6 class="fw-800 mb-1 text-truncate">@book.Title</h6>
                        <div class="text-muted small mb-3">
                            Fiyat: <strong class="text-body">@book.Price.ToString("0.00") ₺</strong>
                        </div>

                        <div class="mt-auto d-flex gap-2">
                            <a class="btn btn-sm btn-outline-secondary flex-fill"
                               asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                                <i class="bi bi-eye"></i> Detay
                            </a>

                            <form method="post" asp-controller="Cart" asp-action="Add"
                                  asp-route-id="@book.Id" class="flex-fill">
                                <button class="btn btn-sm btn-primary w-100">
                                    <i class="bi bi-cart-plus"></i> Sepet
                                </button>
                            </form>

                            <form method="post" asp-controller="Favorites" asp-action="Add"
                                  asp-route-id="@book.Id">
                                <button class="btn btn-sm btn-outline-danger" title="Favorilere ekle">
                                    <i class="bi bi-heart"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}