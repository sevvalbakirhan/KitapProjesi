@model BookStore.MVC.Models.Book
@{
    ViewBag.Title = "Kitap Düzenle";
    var categories = ViewBag.Categories as List<BookStore.MVC.Models.Category> ?? new();
}

<h2>@ViewBag.Title</h2>

<form method="post" enctype="multipart/form-data" class="col-lg-7">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Kitap Adı</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Fiyat</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kategori</label>
        <select asp-for="CategoryId" class="form-select" required>
            @foreach (var c in categories)
            {
                <option value="@c.Id" selected="@(c.Id == Model.CategoryId)">@c.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kapak Resmi</label>
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <div class="mb-2"><img src="@Model.ImageUrl" style="height:90px" /></div>
        }
        <input name="image" type="file" class="form-control" accept="image/*" />
        <div class="form-text">Yeni resim seçmezsen mevcut görsel kalır.</div>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary">Güncelle</button>
        <a class="btn btn-secondary" asp-area="Admin" asp-controller="Books" asp-action="Index">Geri</a>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }